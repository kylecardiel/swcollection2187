{
  "settings": {
        "react": {
        "pragma": "React",
        "version": "16.12.0"
        }
    },
    "env": {
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "react-app",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            1, 
            "always-multiline"
        ],
        "object-curly-spacing": [
          "error", 
          "always"
        ]
    }
}
